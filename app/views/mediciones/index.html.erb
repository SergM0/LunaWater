<div style="display: flex; justify-content: space-between; align-items: center;">
  <h1 style="margin-bottom: 20px;">Últimas Mediciones</h1>
  <%= image_tag "LunaWater.png", alt: "Luna Water", style: "height: 60px;" %>
</div>

<% if @mediciones.any? %>
  <table style="width: 100%; border-collapse: collapse; text-align: left; font-family: sans-serif;">
    <thead>
    <tr style="background-color: #f2f2f2;">
      <th style="padding: 8px; border-bottom: 1px solid #ccc;">ID</th>
      <th style="padding: 8px; border-bottom: 1px solid #ccc;">Sensor</th>
      <th style="padding: 8px; border-bottom: 1px solid #ccc;">Inicio de Medición</th>
      <th style="padding: 8px; border-bottom: 1px solid #ccc;">Fin de Medición</th>
      <th style="padding: 8px; border-bottom: 1px solid #ccc;">Duración (min)</th>
      <th style="padding: 8px; border-bottom: 1px solid #ccc;">Flujo (L/min)</th>
      <th style="padding: 8px; border-bottom: 1px solid #ccc;">Volumen (m³)</th>
      <th style="padding: 8px; border-bottom: 1px solid #ccc;">Volumen (garrafones)</th>
    </tr>
    </thead>
    <tbody>
    <% @mediciones.each do |m| %>
      <tr>
        <td style="padding: 8px; border-bottom: 1px solid #eee;"><%= m["id"] %></td>
        <td style="padding: 8px; border-bottom: 1px solid #eee;"><%= m["sensor_nombre"] %></td>
        <td style="padding: 8px; border-bottom: 1px solid #eee;"><%= Time.parse(m["timestamp_inicio"]).strftime("%d/%m/%Y %H:%M") %></td>
        <td style="padding: 8px; border-bottom: 1px solid #eee;"><%= Time.parse(m["timestamp_fin"]).strftime("%d/%m/%Y %H:%M") %></td>
        <td style="padding: 8px; border-bottom: 1px solid #eee;"><%= m["duracion_min"] %></td>
        <td style="padding: 8px; border-bottom: 1px solid #eee;"><%= m["flujo_promedio"] %></td>
        <td style="padding: 8px; border-bottom: 1px solid #eee;"><%= m["volumen_m3"] %></td>
        <td style="padding: 8px; border-bottom: 1px solid #eee;"><%= m["volumen_garrafones"] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>No hay mediciones registradas.</p>
<% end %>
