<div class="d-flex flex-column vh-100" style="background: linear-gradient(to bottom right, #e0f8ff, #b5ecf9); font-family: 'Segoe UI', sans-serif;">

  <!-- Header con ícono gota y título -->
  <div class="d-flex justify-content-between align-items-center px-4 py-3">
    <div class="d-flex align-items-center gap-2">
      <%= image_tag "LunaWater-nobg.png", alt: "Luna Water", style: "height: 120px;" %>
    </div>
  </div>

  <!-- Título central -->
  <div class="text-center mb-4">
    <h1 style="color: #164e63; font-size: 2rem; font-weight: 700;">Portal de administración Luna Water</h1>
    <p style="color: #0e7490; font-size: 0.95rem;">Accede al monitoreo del sistema de flujo de agua</p>
  </div>

  <!-- Formulario -->
  <div class="d-flex justify-content-center">
    <div class="shadow p-5 rounded" style="width: 100%; max-width: 420px; background: rgba(255, 255, 255, 0.8); backdrop-filter: blur(5px);">
      <%= form_with url: login_path, method: :post, local: true do %>
        <div class="mb-3">
          <%= label_tag :correo, "Email address", style: "color: #164e63; font-weight: 600;" %>
          <%= text_field_tag :correo, params[:correo], class: "form-control", placeholder: "Enter your email", style: "border-color: #a5f3fc;" %>
        </div>

        <div class="mb-3 d-flex justify-content-between align-items-center">
          <%= label_tag :contrasena, "Password", style: "color: #164e63; font-weight: 600;" %>
          <a href="#" class="text-decoration-none" style="font-size: 0.8rem; color: #0e7490;">Forgot password?</a>
        </div>

        <div class="mb-3">
          <%= password_field_tag :contrasena, nil, class: "form-control", placeholder: "Enter your password", style: "border-color: #a5f3fc;" %>
        </div>

        <% if flash.now[:alert] %>
          <p class="text-center mt-2" style="color: #b02a37; font-size: 0.9rem;"><%= flash.now[:alert] %></p>
        <% end %>

        <%= submit_tag "Sign in", class: "btn btn-block fw-bold", style: "background-color: #06b6d4; color: white;" %>
      <% end %>
    </div>
  </div>

  <!-- Footer -->
  <footer class="text-center mt-auto py-3 small" style="color: #0e7490;">
    © <%= Time.now.year %> Luna Water. All rights reserved.
  </footer>
</div>
