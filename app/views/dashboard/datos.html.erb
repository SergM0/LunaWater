<%= render 'tabs' %>
<!-- Aquí el contenido de la tabla -->
<div class="container py-4">
  <div class="row">
    <div class="col">
      <h2 class="fw-bold text-primary mb-3">Tabla de Mediciones</h2>
      <p class="text-muted">Listado de todas las mediciones registradas por los sensores</p>
    </div>
  </div>

  <div class="table-responsive bg-white rounded shadow-sm p-3">
    <table class="table table-hover table-bordered align-middle mb-0">
      <thead class="table-light">
      <tr>
        <th scope="col">Fecha y hora</th>
        <th scope="col">ID Sensor</th>
        <th scope="col">Flujo (L/min)</th>
        <th scope="col">Duración (min)</th>
        <th scope="col">Volumen (L)</th>
        <th scope="col">Volumen en garrafones (min)</th>
      </tr>
      </thead>
      <tbody>
      <% @mediciones.each do |med| %>
        <tr>
          <td><%= med.timestamp_inicio.strftime("%d/%m/%Y %H:%M") %></td>
          <td><%= med.sensor_id %></td>
          <td><%= med.flujo_promedio %> L/min</td>
          <td><%= med.duracion_min %> min</td>
          <td><%= med.volumen_m3 %> m³</td>
          <td><%= med.volumen_garrafones %> garrafones</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
